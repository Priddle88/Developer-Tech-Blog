<div class="gallery">
    {{#if loggedIn}}
    <div class="post">
        <div class="postTitle">
            <p class="moreSpace">{{post.heading}}</p>
            <p>Posted by {{post.user.username}} on {{format_date post.createdAt}}</p>
        </div>
        <p class="content">{{post.body}}</p>
    </div>


    {{#if post.Comments}}
    <section class="post">
        <div class="postTitle">
            <h3>Comments</h3>
        </div>

        <div class="content">
            {{#each post.Comments}}
            <div class="contentBox">
                <div class="commentText">
                    <input type="hidden" name="commentId" value="{{id}}" />
                    <p>
                        {{body}}
                    </p>
                    <p>
                        &mdash; {{user.username}}, {{format_date createdAt}}
                    </p>
                </div>
                <div class="editRmv">
                    <button type="button" class="btn removeCmtBtn">Delete</button>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
    {{/if}}

    <form id="new-comment-form" class="post">
        <div class="postTitle">
            <h3>Add New Comment</h3>
        </div>

        <div class="content">
            <input type="hidden" name="post-id" value="{{post.id}}" />

            <label class="form-label" for="comment-body">Comment</label>

            <textarea name="comment-body" class="form-input"></textarea>

            <button type="button" class="btn btnSizing">Submit</button>
        </div>
    </form>
    {{/if}}
</div>

<script src="/js/comment.js"></script>
<script src="/js/deleteComment.js"></script>