<div class="gallery">
    {{#if loggedIn}}

    {{#each posts}}
    <div class="post">
        <div class="postTitle">
            <p>{{title}}</p>
            <p>Posted by {{user.username}} on {{format_date post_date}}</p>
        </div>
        <p class="content">{{content}}</p>
    </div>
    {{/each}}

    {{/if}}
</div>