<div class="dashboard">
    {{#if loggedIn}}
    <div class="postBox gone">
        <div class="postTitle">
            <p>New Post</p>
        </div>
        <div class="newPost">
            <input class="form-control" name="post-title" type="text" placeholder="Post Title">
            <input class="form-control form-control-lg" name="post-content" type="text" placeholder="Content Here">
        </div>
        <button class="btnPost" type="button">Submit</button>
    </div>
    <div class="dashContent">
        <div class="btnBox">
            <button id="newPostBtn" type="button">+ New Post</button>
        </div>
    </div>
    <div>
        <p>
            {{User.username}}
        </p>
        {{#each posts}}
        <div class="post">
            <div class="postTitle">
                <p class="moreSpace">
                    {{heading}}
                </p>
                <p>Posted by {{user.username}} on {{format_date createdAt}}</p>
            </div>
            <p class="content">{{body}}</p>
        </div>
        {{/each}}
    </div>

    {{/if}}
</div>

<script src="/js/post.js"></script>